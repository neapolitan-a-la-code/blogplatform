doctype html
html
extends baseloggedin
block append content
	h4.
		The Day's Refrain
	ul
		p Name: #{entry[0].name}
		p Text: !{entry[0].text}
	h4 Comments!
	table
		- for (var i = 0; i < 9; ++i) {
			tr.comments
				td.name !{entry[0].comments[i].name}
				td.text !{entry[0].comments[i].text}
		- }
	h6: a(href ='/articles/'+entry[0].id+'/view/comments') View all comments
	h5 Add a comment :)
	form(name="adduser",method="post",action="/articles/#{entry[0].id}/comment")
		input(value="#{username}" name="commentname")
		input(type="text", placeholder="comment", name="commenttext")
		input(class="buttonsubmit" type="submit", value="submit")