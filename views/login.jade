doctype html
html
extends base
block append content
	h4.
		Please Login
	ul
		form(class="form" name="input", method="POST", action="/articles/login/go")
			p Username
				input(class="username" type="text", name="username", placeholder="username")
			p Password
				input(class="password" type="password", name="password", placeholder="password")
			p
				input(class="buttonsubmit" type="submit", value="Sign In")
		form(class="form" name="input", method="GET", action="/articles/signup")
			p
				input(class="buttonsubmit" type="submit", value="Don't have an Account?")
		form(class="form" name="input", method="GET", action="/articles/login/facebook")
			p
				input(class="buttonsubmit" type="submit", value="Sign in using Facebook")
		form(class="form" name="input", method="GET", action="/oauth2callback")
			p
				input(class="buttonsubmit" type="submit", value="Sign in using Google")