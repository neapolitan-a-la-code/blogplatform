doctype html
html
extends baseAdmin
block append content
  div.container
    div.row
      div.col-xs-12.col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2.col-lg-6.col-lg-offset-3
        .carousel.slide(id='#myCarousel', data-ride='carousel')
          ol.carousel-indicators
            li.active(data-target='#myCarousel', data-slide-to='0')
            li(data-target='#myCarousel', data-slide-to='1')
            li(data-target='#myCarousel', data-slide-to='2')
          .carousel-inner
            .item.active
              img(src='../images/fullgroup.jpg', alt='First slide')
            .item
              img(src='../images/group.jpg', alt='Second slide')
            .item
              img(src='../images/bes.jpg', alt='Third slide')
          a.left.carousel-control(href='#myCarousel', role='button', data-slide='prev')
            span.glyphicon.glyphicon-chevron-left
          a.right.carousel-control(href='#myCarousel', role='button', data-slide='next')
            span.glyphicon.glyphicon-chevron-right
  div.row.header
    h3.
      Hello #{username}!  
      What are you thinking today?
    div.col-xs-12.col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2.col-lg-6.col-lg-offset-3.imgBorder
      img(class="img-responsive", src="images/border.png")
  div.container
    each user in entriesData
      div.articlebox.row
        div.row.namerow
          div.namebox.col-xs-12.col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2
            p
              span.glyphicon.glyphicon-user 
              | #{user.name}
          div.textbox.col-xs-12.col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2
            h3 !{user.title}
        div.post-actions.row
          div.viewbox.action.col-xs-3.col-sm-2.col-sm-offset-1.col-md-2.col-md-offset-2
            a(href ='/articles/'+user.id+'/view')
              span.glyphicon.glyphicon-eye-open
          div.commentbox.action.col-xs-3.col-sm-3.col-md-2
            a(href ='/articles/'+user.id+'/view')
              span.glyphicon.glyphicon-comment  #{user.clength}
          div.editbox.action.col-xs-3.col-sm-3.col-md-2
            a(href ='/articles/'+user.id+'/edit')
              span.glyphicon.glyphicon-pencil
          div.deletebox.action.col-xs-3.col-sm-2.col-md-2
            a(href ='/articles/'+user.id+'/delete')
              span.glyphicon.glyphicon-trash
