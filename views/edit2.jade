doctype html
html
extends baseloggedin
block append content
  div.header
    h3.
      Hello #{username}!  
      Write something
  div.container.newPost
    div.row
      div.col-xs-12.col-sm-10.col-sm-offset-1.col-md-8.col-md-offset-2
        form(name="input", method="POST", action="../#{entry[0].id}/edit/push")
          p
            input(type="text", name="author", value="#{entry[0].name}")
          p
            input(type="text", name="title", value="#{entry[0].title}")
          p What are you Thinking Today?
            textarea(type="text", name="entry") !{entry[0].text}
          p
            input(class="buttonsubmit" type="submit", value="submit")